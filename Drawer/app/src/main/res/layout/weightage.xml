<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:columnCount="2"
    android:id="@+id/gd">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:gravity="center"
        android:text="Weightage"
        android:layout_marginTop="10dp"
        android:textSize="30sp"/>
    <View
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2"
        android:background="@color/yellow"/>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:textColor="#686767"
        android:textSize="15sp"
        android:layout_columnSpan="2"
        android:text="Rate the factors provided as 1,2,3,.. with the most important factor as 1 and the least with the largest number"/>


</GridLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gd"
        android:layout_above="@+id/btm">
        >
        <GridLayout
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:id="@+id/weightage_layout"
            android:layout_margin="10dp"
            android:padding="10dp"

            >
            <TextView
                android:padding="10dp"
                android:text="Factor"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:textSize="24sp"/>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text="Weight"
                android:textStyle="bold"
                android:textSize="24sp"/>
        </GridLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/btm"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
